	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="4eb6df35-c282-43d9-87a0-b595cd5b3456" >
		<http:listener-connection host="0.0.0.0" port="8081" />
	</http:listener-config>
	<flow name="helloworldFlow" doc:id="23849427-56b4-4709-9ace-486ae0e8b8f2" >
		<http:listener doc:name="Listener" doc:id="5362c896-fd9c-43c3-b3dd-23f8135a9f36" config-ref="HTTP_Listener_config" path="/hello"/>
		<ee:transform doc:name="Transform Message" doc:id="050cb76e-d6a6-4208-bd3e-028e47e70375" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	message : "Hello World Success"
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
</mule>
